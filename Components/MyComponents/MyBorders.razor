<div style="width: 100%; height: 100%;  border-radius: 100px; outline: 1px var(--Gold, #FBD61C) solid;   display: flex" @attributes="AdditionalAttributes">
    <div style="flex: 1 1 0; justify-content: center; display: inline-flex; padding: @(Padding)px">
        @ChildContent
    </div>
</div>

@code {
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object> AdditionalAttributes { get; set; } = new();
    [Parameter] public int Padding { get; set; } = 12;
    [Parameter] public RenderFragment ChildContent { get; set; }
}
